{
    "manifest_version": 3,
    "name": "Nexus Mods Helper",
    "version": "0.1.1",
    "description": "Enhance Nexus Mods browsing experience",
    "permissions": ["storage"],
    "content_scripts": [
      {
        "matches": ["*://*.nexusmods.com/*"],
        "js": ["content/index.js"],
        "css": ["content/styles.css"]
      }
    ]
  }