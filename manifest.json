{
    "manifest_version": 3,
    "name": "Betternexusmods",
    "version": "0.1.3",
    "description": "Enhance Nexus Mods browsing experience",
    "permissions": ["storage"],
    "icons": {
      "128": "icons/hidedownloadedmods.png"
    },
    
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches":["https://www.nexusmods.com/*", "https://*.nexusmods.com/*"],
        "js": ["index.js", "infiniteScroll.js", "modComponentTweaks.js"],
        "css": ["styles.css"],
        "run_at": "document_idle"
      }
    ]
  }