{
  "name": "Hide downloaded mods",
  "description": "Hides any NexusMods mod listing you have already downloaded.",
  "version": "0.1.1",
  "manifest_version": 3,

  "icons": {
    "128": "icons/hidedownloadedmods.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.nexusmods.com/*"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ],

  "host_permissions": ["https://www.nexusmods.com/*"]
}