{
  "manifest_version": 3,
  "name": "Nexus Mods Helper",
  "version": "0.1.7",
  "description": "Enhance Nexus Mods with download hiding and changelog previews",
  
  "icons": {
    "128": "icons/hidedownloadedmods.png"
  },
  
  "permissions": [
    "storage"
  ],
  
  "host_permissions": [
    "https://*.nexusmods.com/*"
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/features/*.js",
        "src/content/styles.css"
      ],
      "matches": ["https://*.nexusmods.com/*"]
    }
  ],
  
  "content_scripts": [
    {
      "matches": ["https://*.nexusmods.com/*"],
      "js": ["src/content/index.js"],
      "css": ["src/content/styles.css"],
      "type": "module",
      "run_at": "document_idle"
    }
  ]
}