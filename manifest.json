{
    "manifest_version": 3,
    "name": "Nexus Mods Helper",
    "version": "0.1.3",
    "description": "Enhance Nexus Mods browsing experience",
    "permissions": ["storage"],
    "icons": {
      "128": "icons/hidedownloadedmods.png"
    },
    
    "content_scripts": [
      {
        "matches": ["*://*.nexusmods.com/*"],
        "js": ["index.js"],
        "css": ["styles.css"],
        "run_at": "document_idle"

      }
    ]
  }